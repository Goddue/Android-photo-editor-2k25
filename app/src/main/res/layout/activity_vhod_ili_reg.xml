<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon3"
    android:padding="16dp">

    <View
        android:layout_width="318dp"
        android:layout_height="336dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_corner" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:contentDescription="Логотип"
        android:src="@drawable/log" />

    <TextView
            android:id="@+id/v_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:fontFamily="sans-serif"
            android:text="Вход/Регистрация"
            android:textSize="24sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/vhod_vibor"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:minWidth="300dp"
            android:layout_below="@id/v_r"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#32312D"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Войти"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/registr_vibor"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/vhod_vibor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="#32312D"
            android:fontFamily="sans-serif-smallcaps"
            android:minWidth="300dp"
            android:text="Зарегистрироваться"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/social_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registr_vibor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/google"
                android:scaleType="centerInside"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_yandex"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/yandex"
                android:scaleType="centerInside"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_telegram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/telegram"
                android:scaleType="centerInside"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_mailru"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/gmail"
                android:scaleType="centerInside"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_vk"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/vk"
                android:scaleType="centerInside"
                android:padding="10dp" />
        </LinearLayout>
</RelativeLayout>
